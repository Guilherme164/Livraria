@model Livraria.Models.ViewModel.EstoqueLivrosViewModel

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type ="hidden" asp-for="Livro.Id" />
            
            <div class="form-group">
                <label asp-for="Livro.Titulo" class="control-label"></label>
                <input asp-for="Livro.Titulo" class="form-control" />
                <span asp-validation-for="Livro.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Editora" class="control-label"></label>
                <input asp-for="Livro.Editora" class="form-control" />
                <span asp-validation-for="Livro.Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Autor" class="control-label"></label>
                <input asp-for="Livro.Autor" class="form-control" />
                <span asp-validation-for="Livro.Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Disponibilidade" class="control-label"></label>
                <input asp-for="Livro.Disponibilidade" class="form-control" />
                <span asp-validation-for="Livro.Disponibilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.EstoqueId" class="control-label"></label>
                <select asp-for="Livro.EstoqueId" asp-items="@(new SelectList(Model.Estoque,"Id","Nome_estoque"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

